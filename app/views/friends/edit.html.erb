<div class="card w-50">
    <div class="card-header bg-dark p-3">
        <h3 class="text-light">Edit Friend</h3>
    </div>
    <div class="card-body p-2">
        <%= render "form", friend: @friend %>
    </div>
</div>

<div class="mt-3">
    <%= link_to "Show this friend", @friend, class: "btn btn-dark m-2" %>
    <%= link_to "Back to friends", friends_path, class: "btn btn-secondary m-2" %>
    <%= link_to 'Destroy', @friend, data: {turbo_method: :delete, turbo_confirm: 'Are you ure?'}, class: "btn btn-danger m-2"%>
</div>
