<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div class="text-danger">
      <h5><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h5>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group my-2">
    <%= form.label :title, class: 'my-2' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group my-2">
    <%= form.label :description, class: 'my-2' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group my-2">
    <%= form.label :post_image, class: 'my-2' %>
    <%= form.file_field :post_image, class: 'form-control' %>
  </div>
  <div class="form-group my-2">
    <%= form.number_field :user_id, id: :friend_user_id, value: current_user.id, type: :hidden, class: "form-control" %>
  </div>

  <div class="actions mt-3">
    <%= form.submit :class => 'btn btn-dark'%>
  </div>
<% end %>
